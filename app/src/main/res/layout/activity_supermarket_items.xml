<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/supermarketItemsFragment"
    tools:context="com.sovereign.supermarket.activity.SupermarketItemsActivity">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="300dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp"
            android:background="@android:color/background_dark"
            android:ems="10"
            android:hint="Number"
            android:inputType="number"

            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:theme="@style/AppTheme"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="300dp"
            android:layout_marginRight="215dp"
            android:layout_marginTop="150dp"
            android:background="@android:color/background_dark"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Quantity"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/questionSecurityRemove"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="300dp"
            android:layout_marginTop="150dp"
            android:background="@android:color/background_dark"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Are you sure you want to remove this item?"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="300dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="150dp"
            android:text="Add"
            android:visibility="invisible"
            />

        <Button
            android:id="@+id/buttonRemove"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="250dp"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="205dp"
            android:text="Remove"
            android:visibility="invisible"
            />

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="172dp"
            android:layout_height="55dp"
            android:layout_marginBottom="250dp"
            android:layout_marginRight="200dp"
            android:layout_marginTop="205dp"
            android:text="Cancel"
            android:visibility="invisible"
            />

        <Button
            android:id="@+id/buttonRemoveOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="450dp"
            android:layout_marginLeft="250dp"
            android:textColor="@color/colorWhite"
            android:text="Remove Order"
            android:visibility="invisible" />


        <Button
            android:id="@+id/buttonOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="450dp"
            android:text="Order"
            android:textColor="@color/colorWhite"
            android:visibility="invisible"
            android:theme="@style/MyButton"/>/>

        <TextView
            android:id="@+id/totalCost"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="290dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Total: "
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                        <Button
                            android:id="@+id/buttonNewItem"
                            android:layout_width="98dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="270dp"
                            android:text="Add new item"
                            android:visibility="invisible"
                            android:textColor="@color/colorWhite"
                            android:theme="@style/MyButton"/>
                </LinearLayout>



        </LinearLayout>



</FrameLayout>
